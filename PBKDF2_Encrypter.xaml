<Window x:Name="PBKDF2_Encrypter" x:Class="PBKDF2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBKDF2"
        mc:Ignorable="d"
        Title="PBKDF2 Encrypter" Height="230" Width="540">
    <Grid>
        <TextBox x:Name="TextBox_Pass" HorizontalAlignment="Left" Margin="24,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="313"/>
        <TextBox x:Name="TextBox_Iter" HorizontalAlignment="Left" Margin="380,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBox_Result" HorizontalAlignment="Left" Height="70" Margin="24,99,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="476" IsEnabled="False" Focusable="False"/>
        <Button Content="Encrypt" HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Top" Width="117" Click="Button_Click"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="18,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Number of iterations" HorizontalAlignment="Left" Margin="380,11,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
